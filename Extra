/* ============================================================================
   1. Global Styles
============================================================================ */

/* Universal Box-Sizing */
*,
*::before,
*::after {
    box-sizing: border-box; /* Ensure that padding and border are included in width/height */
}

/* Reset CSS - Normalize */
html,
body {
    margin: 0;
    padding: 0;
    font-size: 16px; /* Base font size */
    line-height: 1.5;
    font-family: Arial, sans-serif; /* Default font */
}

body {
    background-color: #f4f4f4;
    color: #333; /* Default text color */
    -webkit-font-smoothing: antialiased; /* Smoother fonts in WebKit browsers */
    -moz-osx-font-smoothing: grayscale; /* Smoother fonts on macOS */
}

a {
    text-decoration: none; /* Remove underlines from links */
    color: inherit; /* Inherit color from parent element */
}

h1, h2, h3, h4, h5, h6 {
    margin-top: 0; /* Remove margin on top of headings */
    margin-bottom: 0.5em; /* Add spacing below headings */
}

ul, ol {
    padding-left: 20px; /* Standard padding for lists */
}

img {
    max-width: 100%; /* Ensure images don't overflow their containers */
    height: auto;
}

button {
    padding: 10px 15px; /* Standard padding for buttons */
    border: none; /* Remove border for button */
    background-color: #007bff; /* Blue background for buttons */
    color: white; /* White text */
    cursor: pointer; /* Pointer cursor on hover */
    font-size: 16px;
}

/* ============================================================================
   2. Typography Styles
============================================================================ */

/* Global Typography Settings */
body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 1.6;
}

/* Headings */
h1 {
    font-size: 2.5rem; /* Main heading size */
    font-weight: 700; /* Bold text */
}

h2 {
    font-size: 2rem;
    font-weight: 700;
}

h3 {
    font-size: 1.75rem;
    font-weight: 600;
}

h4 {
    font-size: 1.5rem;
    font-weight: 600;
}

h5 {
    font-size: 1.25rem;
    font-weight: 500;
}

h6 {
    font-size: 1rem;
    font-weight: 500;
}

/* Paragraphs */
p {
    font-size: 1rem; /* Default paragraph size */
    color: #666; /* Slightly darker gray text */
    margin-bottom: 1.5em; /* Add spacing between paragraphs */
}

/* Links */
a {
    color: #007bff; /* Blue color for links */
    text-decoration: underline; /* Underline links */
}

a:hover {
    color: #0056b3; /* Darker blue on hover */
}

/* Text Alignment */
.text-center {
    text-align: center; /* Center align text */
}

.text-right {
    text-align: right; /* Right align text */
}

.text-left {
    text-align: left; /* Left align text */
}

/* ============================================================================
   3. Layout - Flexbox
============================================================================ */

/* Flex Container */
.flex-container {
    display: flex;
    justify-content: space-between; /* Space between elements */
    align-items: center; /* Center items vertically */
    gap: 15px; /* Add a gap between flex items */
}

/* Flex Direction */
.flex-row {
    flex-direction: row; /* Default, items arranged in a row */
}

.flex-column {
    flex-direction: column; /* Stack items in a column */
}

/* Flex Wrap */
.flex-wrap {
    flex-wrap: wrap; /* Allow items to wrap onto a new line */
}

/* Flex Item */
.flex-item {
    flex: 1; /* Items will grow to fill available space */
}

/* ============================================================================
   4. Layout - Grid
============================================================================ */

/* Basic Grid Layout */
.grid-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Create 3 equal-width columns */
    gap: 20px; /* Add gap between grid items */
}

.grid-item {
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
}

/* Named Grid Areas */
.grid-container-named {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    grid-template-rows: auto;
    grid-template-areas:
        "header header header"
        "sidebar main main"
        "footer footer footer";
}

.grid-item-header {
    grid-area: header; /* Define grid area for header */
}

.grid-item-sidebar {
    grid-area: sidebar; /* Define grid area for sidebar */
}

.grid-item-main {
    grid-area: main; /* Define grid area for main content */
}

.grid-item-footer {
    grid-area: footer; /* Define grid area for footer */
}

/* ============================================================================
   5. Buttons and UI Elements
============================================================================ */

/* Basic Button */
.button {
    padding: 12px 18px;
    font-size: 1rem;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.button:hover {
    background-color: #0056b3; /* Darker blue on hover */
}

.button-primary {
    background-color: #28a745;
}

.button-primary:hover {
    background-color: #218838; /* Darker green on hover */
}

/* Input Fields */
input[type="text"],
input[type="password"],
input[type="email"],
textarea {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 10px;
}

input[type="text"]:focus,
input[type="password"]:focus,
input[type="email"]:focus,
textarea:focus {
    border-color: #007bff; /* Blue border when focused */
    outline: none;
}

