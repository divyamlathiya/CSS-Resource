}

/* ============================================================================
   8. Animations and Transitions
============================================================================ */

/* Basic Transition */
.box {
    width: 200px;
    height: 200px;
    background-color: #ff5733;
    transition: background-color 0.3s ease; /* Smooth color transition */
}

.box:hover {
    background-color: #333; /* Change color on hover */
}

/* Keyframe Animation */
@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.fade-in {
    animation: fadeIn 1s ease-out; /* Fade-in animation */
}

/* Bounce Animation */
@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20px);
    }
}

.bounce {
    animation: bounce 1s infinite; /* Bounce effect */
}

/* Slide In Animation */
@keyframes slideIn {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(0);
    }
}

.slide-in {
    animation: slideIn 0.5s ease-out; /* Slide-in from left */
}

/* Rotate Animation */
@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

.rotate {
    animation: rotate 2s linear infinite; /* Continuous rotation */
}

/* Scale Up Animation */
@keyframes scaleUp {
    0% {
        transform: scale(0.5);
    }
    100% {
        transform: scale(1);
    }
}

.scale-up {
    animation: scaleUp 0.5s ease-in-out;
}

/* Fade Out Animation */
@keyframes fadeOut {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.fade-out {
    animation: fadeOut 1s forwards;
}

/* ============================================================================
   9. Responsive Design (Mobile First)
============================================================================ */

/* Media Queries for Mobile */
@media (max-width: 768px) {
    .flex-container {
        flex-direction: column; /* Stack items in a column on mobile */
    }

    .grid-container {
        grid-template-columns: 1fr; /* Single column layout on small screens */
    }

    .button {
        width: 100%; /* Make buttons full-width on mobile */
    }

    .modal-content {
        width: 90%; /* Modal takes 90% of the screen width on mobile */
    }

    .text-center {
        font-size: 0.9rem; /* Smaller text on mobile for readability */
    }
}

/* Media Queries for Tablet */
@media (max-width: 1024px) {
    .grid-container {
        grid-template-columns: repeat(2, 1fr); /* Two columns on tablets */
    }

    .button {
        width: auto; /* Restore original button width on tablet */
    }

    .modal-content {
        width: 80%; /* Modal takes 80% of the screen width on tablet */
    }
}

/* Media Queries for Larger Screens */
@media (min-width: 1200px) {
    .flex-container {
        justify-content: space-evenly; /* Evenly space flex items on large screens */
    }

    .grid-container {
        grid-template-columns: repeat(4, 1fr); /* Four columns on large screens */
    }

    .text-center {
        font-size: 1.1rem; /* Slightly larger text for readability */
    }
}

